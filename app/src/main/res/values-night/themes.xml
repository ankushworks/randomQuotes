<resources>
    <!-- Base application theme. -->
    <style name="Theme.RandomQuotes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:statusBarColor" > @color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>

    </style>


    <style name="ShapeAppearanceOverlay.App.rounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>